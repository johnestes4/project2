<!DOCTYPE html>
<html>
  <head>
    <title>Lettr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1><%= link_to "Lettr", root_url %></h1>
    <nav>
      <% if @current_user %>
        <div class="nav"><%= link_to "Welcome, #{@current_user.username}!", user_path(@current_user) %></div>
        <div class="nav"><%= link_to "Sign Out", session_path, method: :delete %></div>
        <div class="nav"><%= link_to "Inbox", inbox_path %></div>
        <div class="nav"><%= link_to "Outbox", outbox_path %></div>
        <div class="nav"><%= link_to "Users", users_path %></div>
      <% else %>
        <%= link_to "Sign Up", new_user_path %></div>
        <%= link_to "Sign In", new_session_path %></div>
      <% end %>
    </nav>
    <% flash.each do |type, message| %>
      <p class="<%= type %>"><%= message %></p>
    <% end %>
    <div class="page-wrapper">
      <%= yield %>
    </div>
  </body>
</html>
